{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "compilerOptions": {
        "allowJs": true,
        "paths": {
            "@/*": [
                "./src/*",
                "./*"
            ]
        },
        "removeComments": true,
        "resolveJsonModule": true,
        "strict": false,
        "types": [
            "naive-ui/volar",
            "vite/client",
            "vite-plugin-pages/client",
        ],
    },
    "exclude": [
        "node_modules",
        "dist",
        ".git",
        "./src/*.config.js"
    ]
}
