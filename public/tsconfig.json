{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "moduleResolution": "Bundler",
        "paths": {
            "@/*": [
                "./src/*",
                "./*"
            ]
        },
        "removeComments": true,
        "importsNotUsedAsValues": null,
        "preserveValueImports": null,
        "verbatimModuleSyntax": true,
        "strict": false,
        "types": [
            "naive-ui/volar",
            "vite/client",
            "vite-plugin-pages/client",
        ],
    },
    "exclude": [
        "node_modules",
        "dist",
        ".git",
        "./src/*.config.js"
    ]
}
